extends layout/polos
block content
	.container-fluid
		.row
			.col-xs-12.center-vert
				img.center-block.app-logo(src="/img/logo-jas.png" alt="Logo" height="100px")
		.row
			.col-xs-12.col-sm-12.col-md-4.col-md-offset-4
				//- p #{appLogo}
				.box
					.box-header.with-border
						h1 #{title}
					.box-body
						form.form#frmLogin(action="/login" method="post")
							.form-group
								input.form-control(type="text" name="userid" placeholder="Username" value=!{userid})
							.form-group
								input.form-control(type="password" name="password" placeholder="Password")
							.form-group
								button.btn.btn-primary.flat#btnLogin Login
					.box-footer
						if (msg != "")
							h5(style="color:red") 
								i.fa.fa-warning &nbsp;
								|!{msg} !
						if (msg == 'Tidak ada Admin.')
							a.btn.btn-success.flat(href='/signup' style="text-transform: uppercase;")
								i.fa.fa-user-plus 
								| &nbsp; Buat
			.col-xs-12
				.container
					p Copyright &copy; 2019 
						a(href="mailto:matthelosh@gmail.com") Mat Soleh
		
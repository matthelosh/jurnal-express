.row
	.container-fluid
		.col-xs-12
			h2.text-center Anda memiliki Jadwal yang telah diabsen
			hr
			
.row#dataAbsen
	.container-fluid
		.col-xs-12
			.box
				.box-header
					h4 Catatan Absensi Saya
				.box-body
					.table-responsive
						table.table.dataTable#tableAbsenkus
							thead
								tr
									th No
									//- th Kode Absen
									th Tanggal
									th Kelas
									th Mapel
									th Jml Siswa
									th H
									th I
									th S
									th A
									th T
									th Opsi
							tbody
								unless data == null
									each absenku, index in data
										tr
											td #{index+1}
											//- td #{absenku.kodeAbsen}
											td #{absenku.tanggal}
											td #{absenku.Rombel.namaRombel}
											td #{absenku.Mapel.namaMapel}
											td #{absenku.jmlSiswa} org
											td #{absenku.h}
											td #{absenku.i}
											td #{absenku.s}
											td #{absenku.a}
											td #{absenku.t}
											td
												button.btn.btn-sm.btn-info.btnDetilAbsenku(data-id=`${absenku.kodeAbsen}`)
													i.fa.fa-search
													| &nbsp; Detil
			

.row
	.container-fluid#editAbsen(style="display:none")
		.box
			.box-header
				h4 Detil Absen
				.box-tools.pull-right
					button(type='button', data-widget='collapse', data-toggle='tooltip',title='collapse').btn.btn-box-tool
						i.fa.fa-minus
					button(type='button', data-widget='slideUp', data-toggle='tooltip',title='Remove').btn.btn-box-tool
						i.fa.fa-times
			.box-body
				.col-xs-12.col-sm-8
					.box
						.box-header
							h4 Kode Absen: 
								span#idAbsen
							
						.box-body
							.table-responsive
								table.table.table-bordered.table-condensed#tableEditAbsen
									thead
										tr
											th No
											th NIS
											th Nama
											th ket
											th Opsi
									tbody#tbodyDoAbsen
				.col-xs-12.col-sm-4
					.box
						.box-header
							h4 Keterangan
						.box-body
							#ket

					.box
						.box-header
							h4 Jurnal Pembelajaran
						.box-body
							#jurnal


